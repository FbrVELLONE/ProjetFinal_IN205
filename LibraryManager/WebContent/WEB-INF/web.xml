<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LibraryManager</display-name>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/View/error_500.jsp</location>
  </error-page>

  <!-- Dashboard servlet -->
  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>servlet.DashboardServlet</servlet-class>    
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <!-- EmpruntAdd servlet -->
  <servlet>
    <servlet-name>EmpruntAddServlet</servlet-name>
    <servlet-class>servlet.EmpruntAddServlet</servlet-class>    
  </servlet>
  <servlet-mapping>
    <servlet-name>EmpruntAddServlet</servlet-name>
    <url-pattern>/emprunt_add</url-pattern>
  </servlet-mapping>

  <!-- EmprunttList servlet -->
  <servlet>
    <servlet-name>EmpruntListServlet</servlet-name>
    <servlet-class>servlet.EmpruntListServlet</servlet-class>    
  </servlet>
  <servlet-mapping>
    <servlet-name>EmpruntListServlet</servlet-name>
    <url-pattern>/emprunt_list</url-pattern>
  </servlet-mapping>
</web-app>